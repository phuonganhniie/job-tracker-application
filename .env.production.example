# Production Environment Variables Template
# This file shows what env vars are needed for production deployment
# DO NOT commit actual values to Git

# Application
DEBUG=false

# Database (will be provided by Render/Heroku)
# Format for PostgreSQL:
DATABASE_URL=postgresql://user:password@host:5432/database_name

# API
API_V1_PREFIX=/api/v1

# CORS (JSON array format for cloud platforms)
# Frontend URL sau khi deploy
BACKEND_CORS_ORIGINS=["https://your-frontend-url.onrender.com"]

# Python Version (for Render/Heroku)
PYTHON_VERSION=3.11.0
